{
    "compilerOptions": {
        "lib": ["es5", "es6", "dom", "ESNext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "removeComments": true,
        "baseUrl": "./",
        "paths": {
            "@entities-lib/*": ["./../entities-lib/*"],
            "@config-lib/*": ["./../config-lib/*"],
            "@commons/*": ["./src/commons/*"],
            "@hashing/*": ["./src/hashing/*"],
            "@root/*": ["./*"]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2022",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./dist",
        "jsx": "preserve",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "incremental": true,
        "types": ["node","jest"],
        "typeRoots": ["./node_module/@types", "./src/types"],
        "preserveConstEnums": true
    },
    "typeAcquisition": { "include": ["jest"] },

    "include": ["src/**/*",  "**/*.ts", "**/*.tsx", "test/**/*", "**/*.spec.ts"],
    "exclude": ["node_modules, ./dist"]
}
