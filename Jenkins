pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                script{
                    sh '''
                    touch ../.env
                    echo "TOKEN_DOCKER=$TOKEN_DOCKER" >> ../.env
                    ls -la
                    bash docker_build.bash "$TOKEN_DOCKER" "$TOKEN_GIT"
                    '''
                }
            }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}